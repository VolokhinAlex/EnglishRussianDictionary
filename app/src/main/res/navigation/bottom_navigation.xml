<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/dictionaryOfWordsFragment">

    <fragment
        android:id="@+id/historySearchFragment"
        android:name="com.volokhinaleksey.dictionaryofwords.ui.history.HistorySearchFragment"
        android:label="History"
        tools:layout="@layout/fragment_history_search"/>

    <fragment
        android:id="@+id/favoriteWordsFragment"
        android:name="com.volokhinaleksey.dictionaryofwords.ui.favorite.FavoriteWordsFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite_words"/>

    <fragment
        android:id="@+id/dictionaryOfWordsFragment"
        android:name="com.volokhinaleksey.dictionaryofwords.ui.dictionarywords.DictionaryOfWordsFragment"
        android:label="Search"
        tools:layout="@layout/fragment_dictionary_of_words">
        <action
            android:id="@+id/action_dictionaryOfWordsFragment_to_wordDescriptionFragment"
            app:destination="@id/wordDescriptionFragment" />
    </fragment>

    <fragment
        android:id="@+id/wordDescriptionFragment"
        android:name="com.volokhinaleksey.dictionaryofwords.ui.description.WordDescriptionFragment"
        android:label="WordDescriptionFragment" >
        <action
            android:id="@+id/action_wordDescriptionFragment_to_dictionaryOfWordsFragment"
            app:destination="@id/dictionaryOfWordsFragment" />
    </fragment>

</navigation>