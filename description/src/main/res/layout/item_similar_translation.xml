<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/item_similar_width"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_similar_translation_margin"
    app:cardCornerRadius="@dimen/item_similar_translation_card_corner"
    app:cardElevation="@dimen/item_similar_translation_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/item_similar_translation_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_similar_translation_text_size"
            tools:text="Something for translation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/part_of_speech"
                android:textSize="@dimen/item_similar_translation_text_size" />

            <TextView
                android:id="@+id/partOfSpeechAbbreviation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/item_similar_translation_text_size"
                tools:text="сущ." />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>