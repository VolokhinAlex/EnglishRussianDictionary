<resources>
    <!-- Base application theme. -->
    <style name="Theme.DictionaryOfWords" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorTertiary">@color/colorTertiary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondaryContainer">@color/colorSecondaryContainer</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="materialCardViewStyle">@style/MaterialCardView</item>
    </style>

    <style name="BaseTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderTextStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/color_text_header</item>
        <item name="android:textSize">@dimen/text_size_standard_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewButtonStyle" parent="BaseTextStyle">
        <item name="android:textColor">#FDFDFD</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseEditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="BaseFlatButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Theme.DictionaryOfWords.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DictionaryOfWords.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DictionaryOfWords.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SearchInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">30dp</item>
        <item name="boxCornerRadiusTopEnd">30dp</item>
        <item name="boxCornerRadiusBottomStart">30dp</item>
        <item name="boxCornerRadiusTopStart">30dp</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorSecondary</item>
    </style>

    <style name="BottomNavigationBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="AppBar">
        <item name="background">@color/white</item>
    </style>
</resources>